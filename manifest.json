{
    "manifest_version": 3,
    "name": "Task Reminder Extension",
    "version": "1.1",
    "description": "A simple and accessible task reminder that notifies you at set intervals.",
    "permissions": [
      "storage",
      "alarms",
      "notifications"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
    },
    "background": {
      "service_worker": "background.js"
    }
  }
  